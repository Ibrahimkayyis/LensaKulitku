<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTrackingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tracking Results"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:fontFamily="@font/nunitosansextrabold"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="16dp" />

    <!-- Search Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_search_bar"
        android:paddingVertical="8dp"
        android:paddingStart="16dp">

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_search"
            app:tint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Search Tracking Results"
            android:background="@null"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintStart_toEndOf="@id/searchIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Filter Buttons -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/filterToggleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAll"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:checkable="true"
            android:checked="true"
            app:backgroundTint="@color/blue"
            android:textColor="@android:color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSevere"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Severe"
            android:checkable="true"
            app:backgroundTint="@android:color/white"
            android:textColor="@android:color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnModerate"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moderate"
            android:checkable="true"
            app:backgroundTint="@android:color/white"
            android:textColor="@android:color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMild"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mild"
            android:checkable="true"
            app:backgroundTint="@android:color/white"
            android:textColor="@android:color/black" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- ProgressBar for Loading -->
    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- TextView for Error Message -->
    <TextView
        android:id="@+id/tvErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No tracking results found"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView for Tracking Results -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTracking"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="16dp" />
</LinearLayout>
